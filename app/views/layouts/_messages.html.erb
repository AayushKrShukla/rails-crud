<div class="container">
  <% flash.each do |name, msg| %>
    <div class="mt-2 alert alert-success alert-dismissible fade show" role="alert">
      <%= msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="close">
          <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
</div>  